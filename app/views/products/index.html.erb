<%= @order_item.inspect %>
    
 
      <% @products.each do |product| %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-3">
            <div class="booyah-box col-10 offset-1">
              <div class="card" style="width: 18rem">
                <%= link_to product_path(product) do %>
                  <%= image_tag product.picture.to_s, class: 'img-fluid' %>
                <% end %>
                <div class="handle"><%= product.user.email %></div>
                <div class="row">
                <div class="col-sm-8 col-12">
                <p><%= link_to product.name, product_path(product) %>
                <br/>
                <%= number_to_currency(product.price) %></p>
                <p><%= product.description %></p>
                <div class="product-actions float-right">
                <% if current_user && current_user == product.user %>
                <%= link_to "Edit", edit_product_path(product) %> |
                <%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Are you sure?"} %>
                <% end %>
                </div>
              <div class="handle">
              <%= button_to "Add to Cart", order_items_path(product_id: product), class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
   </div>
  </div>
<% end %>




</div>


<p><%= link_to "New product", new_product_path %></p>





